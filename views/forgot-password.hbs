<div class="row">
  <div class="col col-8 col-md-6 mx-auto">
    <div class="card card-body">
      <h1 class="text-center">輸入信箱重設密碼</h1>
      {{> message}}
      <form action="/users/forgot-password" method="POST">
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            placeholder="輸入電子郵件"
          />
        </div>
        <div class="d-grid col-11 mx-auto">
          <button type="submit" class="btn btn-primary">Submit</button>
          <a href="/" class="btn btn-dark mt-2">回登入頁</a>
        </div>
        {{#if resetLink}}
          <h1 class="text-center mt-2">重設密碼連結&#129031;</h1>
          <code><a href="/users/reset-password/{{_id}}/{{token}}" style="display:block">{{resetLink}}</a></code>
        {{/if}}
      </form>
    </div>
  </div>
</div>